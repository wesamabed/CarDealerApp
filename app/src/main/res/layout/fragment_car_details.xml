<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#A38DCC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#9D87C5"
        android:backgroundTint="#A595C1">

        <ImageView
            android:id="@+id/carDetailImageView"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginBottom="2dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/carDetailNameTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Car Name"
            android:textSize="22sp"
            android:background="#A38DCC"
            />

        <TextView
            android:id="@+id/carDetailTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Car Type"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/carDetailModelTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Car Model"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/carDetailPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Price"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/carDetailFuelTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Fuel Type"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/carDetailKilometersTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Kilometers"
            android:textSize="22sp"
            android:background="#A38DCC"/>
        <TextView
            android:id="@+id/CarDealerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="CarDealer Name"
            android:textSize="22sp"
            android:background="#A38DCC"/>
        <TextView
            android:id="@+id/ReservedTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="Reserved"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/reservationFromTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="reservationFrom"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/reservationToTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:text="reservationTo"
            android:textSize="22sp"
            android:background="#A38DCC"/>

        <!-- Car Dealer Contact Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="42dp"
                android:layout_marginRight="2dp"
                android:src="@android:drawable/ic_dialog_dialer" />

            <TextView
                android:id="@+id/carDetailDealerPhoneTextView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="#A38DCC"
                android:text="Dealer Phone: SAMPLE_PHONE"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginRight="2dp"
                android:src="@android:drawable/ic_dialog_map" />

            <TextView
                android:id="@+id/carDetailDealerLocationTextView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Dealer Location: SAMPLE_LOCATION"
                android:textSize="20sp"
                android:background="#A38DCC"/>
        </LinearLayout>

        <!-- Reserve and Favorite Buttons -->
        <Button
            android:id="@+id/carDetailReserveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Reserve" />

        <Button
            android:id="@+id/carDetailAddToFavoritesButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add to Favorites" />



    </LinearLayout>
</ScrollView>
