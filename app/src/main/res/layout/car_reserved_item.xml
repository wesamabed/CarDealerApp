<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/carNameTextView"
        android:layout_width="281dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:text="Car Name"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carTypeTextView"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:text="Car Type" />

    <TextView
        android:id="@+id/carModelTextView"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:text="Car Model" />

    <TextView
        android:id="@+id/userwhoreserved"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:text="User Reserved" />
    <TextView
        android:id="@+id/from"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:text="Reserved From" />
    <TextView
        android:id="@+id/to"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:text="Reserved To" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">



        <Button
            android:id="@+id/Delete_Customer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Dustomer"/>
    </LinearLayout>

</LinearLayout>
