<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#A38DCC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#9D87C5"
        android:backgroundTint="#A595C1"
        >

        <ImageView
            android:id="@+id/carImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#A38DCC"/>

        <TextView
            android:id="@+id/tvCarDealerId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Car Dealer ID"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="First Name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Last Name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Email"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Phone Number"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvGender"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Gender"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Country"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="City"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Location"
            android:textSize="22sp"/>



        <!-- TextViews for lists like CarIds, reservedCarIds, etc. might require a more complex layout (like RecyclerView) to display lists -->
        <!-- For simplicity, let's just show the count of these lists -->

        <TextView
            android:id="@+id/tvCarIdsCount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Number of Cars"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tvReservedCarIdsCount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Number of Reserved Cars"
            android:textSize="20sp"/>


    </LinearLayout>
</ScrollView>
